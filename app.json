{
    "name": "bolt-js-starter-template",
    "description": "A Slack Bolt JS starter app. This app.json is used for one-click Heroku deployment of this Slack app.",
    "repository": "https://github.com/slack-samples/bolt-js-starter-template",
    "logo": "https://docs.slack.dev/img/logos/slack-developers-white.png",
    "keywords": ["node", "slack", "bolt", "javascript", "starter"],
    "env": {
      "SLACK_BOT_TOKEN": {
        "description": "Slack Bot Token",
        "required": true
      },
      "SLACK_SIGNING_SECRET": {
        "description": "Slack Signing Secret",
        "required": true
      },
      "SLACK_APP_TOKEN": {
        "description": "Slack App Token",
        "required": true
      }
    },
    "formation": {
      "worker": {
        "quantity": 1,
        "size": "eco"
      }
    }
  }
  
